<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/user_info", model:@user %>
      <%= render "layouts/new_book", model:@book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book_detail.user.id) do %>
              <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 40, 40, format: "jpg", follback: "no-image.jpg", size: "40x40", class: "d-block" %>
            <% end %>
            <%= link_to @book_detail.user.name, user_path(@book_detail.user) %>
          </td>
          <td><%= link_to @book_detail.title %></td>
          <td><%= @book_detail.body %></td>
          <% if @book_detail.user == current_user %>
            <td><%= link_to "Edit", edit_user_path(@book_detail.user) %></td>
            <td><%= link_to "Destroy", user_path(@book_detail.user), method: :delete %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>

