<h1>User info</h1>
<%= attachment_image_tag model, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= model.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= model.introduction %></td>
  </tr>
</table>

<%= link_to edit_user_path(model), class: "btn btn-sm btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>

