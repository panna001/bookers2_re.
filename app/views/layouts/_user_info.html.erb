<h1>User info</h1>
<%= attachment_image_tag model, :profile_image, :fill, 60, 60, format: "jpg", rollback: "no-image.jpg", size: "60x60" %>
<table>
  <tr>
    <th>name</th>
    <td><%= model.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= model.introduction %></td>
  </tr>
</table>

<%= link_to edit_user_path(model) do %>
  <i class="fas fa-user-cog"></i>
<% end %>