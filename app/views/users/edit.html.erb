<h1>User info</h1>
<%= render "layouts/erros", model:@user %>
<%= form_with model: @user, lacal: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :profile_image, "Image" %>
  <%= f.attachment_field :profile_image %>
  <%= f.label :introduction, "Introduction" %>
  <%= f.text_field :introduction %>
  <%= f.submit "Update User" %>
<% end %>